// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider     = "prisma-client-js"
    relationMode = "prisma"
}

datasource db {
    provider = "postgresql"
    url      = env("POSTGRES_PRISMA_URL")
}

model Profile {
    user      String  @id @default("its.amelina")
    name      String
    role      String?
    biography String?
    avatar    String?
    avatarUrl String? // https://ameliadev.tech/images/{AvatarHash}.jpg
    links     Link[]
}

model Project {
    identifier     String  @id @default(uuid())
    name           String  @unique
    description    String?
    screenImageUrl String?
    badges         Badge[]
    links          Link[]
}

model Link {
    id String @id @default(uuid())

    name String
    url  String

    Project     Project? @relation(fields: [projectId], references: [identifier], onDelete: Cascade)
    projectId   String?
    Profile     Profile? @relation(fields: [profileUser], references: [user], onDelete: Cascade)
    profileUser String?
}

model Badge {
    id   Int    @id @default(autoincrement())
    name String

    Project   Project? @relation(fields: [projectId], references: [identifier], onDelete: Cascade)
    projectId String?
}
